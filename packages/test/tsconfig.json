{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES6",
        "module": "CommonJS",
        "rootDir": "src",
        "outDir": "dist",
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "moduleResolution": "node",
    },
    "exclude": [
        "dist",
        "build",
        "node_modules",
        "test"
    ]
}